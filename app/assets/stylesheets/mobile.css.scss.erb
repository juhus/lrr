/* iphone 2G - 4S */

@media only screen
and (min-device-width : 320px) 
and (max-device-width : 480px){
	#lrr {
	    width: 26.05em;
	}

	.lrr-header{
	    height:6em;
	}
	.lrr-navbar{
	    height:1.25em;
	}
	.lrr-divider, .lrr-flags{
	    height:0.9em;
	}
	.lrr-invite, .lrr-contact{
	    height:15.45em;
	}
	.lrr-activities, .lrr-about{
	    height:23.6em;
	}
	.menu, .separator {
    	margin-top:0.625em;
    	height:0.625em;
	}
	.social{
	    margin-top:1.5em;
	    height:5em;
	}
	.email{
		font-size: 0.4em;
	    padding-left:1.25em;
	    top:-1.25em;
	}
}

@media only screen 
and (min-device-width : 481px) 
and (max-device-width : 767px)  { 
	#lrr {
	    width: 41.68em;
	}

	.lrr-header{
	    height:9.6em;
	}
	.lrr-navbar{
	    height:2em;
	}
	.lrr-divider, .lrr-flags{
	    height:1.44em;
	}
	.lrr-invite, .lrr-contact{
	    height:24.72em;
	}
	.lrr-activities, .lrr-about{
	    height:37.76em;
	}
	.menu, .separator {
    	margin-top:1em;
    	height:1em;
	}
	.social{
	    margin-top:2.4em;
	    height:8em;
	}
	.email{
		font-size: 0.64em;
	    padding-left:2em;
	    top:-2em;
	}
}

@media only screen 
and (min-device-width : 768px) 
and (max-device-width : 1024px)  { 
	#lrr {
	    width: 57.888888889em;
	}

	.lrr-header{
	    height:13.333333333em;
	}
	.lrr-navbar{
	    height:2.777777778em;
	}
	.lrr-divider, .lrr-flags{
	    height:2em;
	}
	.lrr-invite, .lrr-contact{
	    height:34.333333333em;
	}
	.lrr-activities, .lrr-about{
	    height:52.444444444em;
	}
	.menu, .separator {
    	margin-top:1.388888889em;
    	height:1.388888889em;
	}
	.social{
	    margin-top:3.333333333em;
	    height:11.111111111em;
	}
	.email{
		font-size: 0.888888889em;
	    padding-left:2.777777778em;
	    top:-2.777777778em;
	}
}